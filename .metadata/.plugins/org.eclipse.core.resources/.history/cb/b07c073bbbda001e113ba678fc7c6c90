package src.com.pattens;

public class triangle {

	public static void main(String[] args) 
	{
	 int rows=5;
     for(int r=1;r<=rows;r++)
     {
    	 for(int c=1;c<=r;c++)
    	 {
    		 System.out.print("");
    	 }
    	 
    	  for(int c=rows;c>=r;c--) 
    	 {
     		 System.out.print("* ");
    	 }
     	
    	 System.out.println();
     }
     for(int i=1;i<=rows;i++)
     {
    	 for(int j=rows;j>i;j--)
    	 {
    		 System.out.print("  ");
    	 }
    	 for(int c=1;c<=i;c++)
     	 {
    		 System.out.print("*");

     	 }
    	 System.out.println();
     }
	}

}
